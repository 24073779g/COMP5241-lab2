{
  "version": 2,
  "builds": [
    {
      "src": "public/main.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "15mb",
        "runtime": "python3.11"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/public/main"
    },
    {
      "src": "/(.*)",
      "dest": "/public/pages/index.html"
    }
  ]
}