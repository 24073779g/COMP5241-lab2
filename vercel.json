{
  "builds": [
    {
      "src": "src/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.11",
        "installCommand": "chmod +x build.sh && ./build.sh"
      }
    },
    {
      "src": "src/pages/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "src/main"
    },
    {
      "src": "/(.*)",
      "dest": "src/pages/index.html"
    }
  ]
}